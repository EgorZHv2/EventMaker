@model RegistrationViewModel

<h2>Регистрация нового пользователя</h2>
<form method="post" enctype="multipart/form-data">
    
    <div>
        <label asp-for="FirstName"></label><br />
        <input type="text" class="form-control" asp-for="FirstName" />

    </div>
    <div>
        <label asp-for="LastName"></label><br />
        <input type="text" class="form-control" asp-for="LastName" />

    </div>
    <div>
        <label asp-for="Patronymic"></label><br />
        <input type="text" class="form-control" asp-for="Patronymic" />

    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input type="text" class="form-control" asp-for="Email" />

    </div>
    <div>
        <label asp-for="PhoneNumber"></label><br />
        <input type="text" class="form-control" asp-for="PhoneNumber" />

    </div>
    <div>
        <label asp-for="BirthDate"></label><br />
        <input type="text" type="date" class="form-control" asp-for="BirthDate" />

    </div>
    <div>
        <label asp-for="Gender"></label><br />
        <select class="form-control" asp-for="Gender">
            <option value="@Gender.Male">Муж</option>
            <option value="@Gender.Female">Жен</option>
        </select>

    </div>
    <div>
        <label asp-for="UserProfile"></label><br />
        <input  class="form-control" asp-for="UserProfile" name="UserProfile" type="file" />

    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input type="text" class="form-control" asp-for="Password" />

    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input type="text" class="form-control" asp-for="PasswordConfirm" />

    </div>
    <div>
        <input type="submit" class="btn btn-primary mt-2" value="Регистрация" />
    </div>
</form>