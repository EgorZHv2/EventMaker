@model LoginViewModel

<main class="mx-auto container mt-5">
    <form method="post" asp-controller="Auth" asp-action="Login">
      <input type="hidden" asp-for="ReturnUrl" />
      <div class="card">
        <div class="card-header text-center">
          <h3>Вход в систему</h3>
        </div>
        <div class="card-body">
          <div class="align-items-center d-flex my-3">
            <label class="form-label w-15 text-center text-nowrap">Логин</label>
            <input type="text" class="form-control" asp-for="IdNumber">
          </div>
          <div class="align-items-center d-flex my-3">
            <label class="form-label w-15 text-center text-nowrap">Пароль</label>
            <input type="password" class="form-control" asp-for="Password">
          </div>
          <div class="align-items-center  d-flex m-3">
            <label class="form-label">Запомнить меня</label>
            <input type="checkbox" class="form-check ms-4" asp-for="RememberMe"  style="width: 20px; height: 20px;">
          </div>
          <div>
            <button type="submit" class="btn btn-primary w-100">Войти</button>
          </div>



        </div>
      </div>
    </form>

  </main>